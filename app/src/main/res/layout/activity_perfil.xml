<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.quicktrade.Perfil"
    android:background="#3E85B0">

    <Button
        android:id="@+id/boton_agrUsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="AGREGAR USUARIO"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/boton_agrPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_agrUsu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="AGREGAR PRODUCTO" />

    <Button
        android:id="@+id/botonTodosProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="VER TODOS LOS PRODUCTOS"
        android:layout_below="@+id/boton_agrPro"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botonTodosUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="VER TODOS LOS USUARIOS"
        android:layout_below="@+id/botonTodosProductos"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botonSeguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="VER MIS SEGUIDORES"
        android:layout_below="@+id/botonTodosUsuarios"
        android:layout_alignStart="@+id/boton_agrPro" />

    <TextView
        android:id="@+id/seguidoresText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botonSeguidores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

</RelativeLayout>
